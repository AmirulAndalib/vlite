{
	"name": "vlitejs",
	"version": "3.0.4",
	"description": "vLitejs is a fast and lightweight Javascript library for customizing HTML5 and Youtube video players in Javascript with a minimalist theme",
	"keywords": [
		"html5",
		"lightweight",
		"player",
		"vanilla javascript",
		"video",
		"videojs",
		"youtube",
		"youtube api"
	],
	"homepage": "https://yoriiis.github.io/vlitejs",
	"bugs": "https://github.com/yoriiis/vlitejs/issues",
	"repository": "https://github.com/yoriiis/vlitejs.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris Daniel (joris.daniel@gmail.com)",
	"main": "dist/vlite/js/vlite.js",
	"scripts": {
		"build": "rm -rf ./dist/ && webpack --mode=production",
		"build:jsdoc": "jsdoc --configure ./jsdoc.json",
		"build:mkdocs": "rm -rf ./site/ && npm run build && npm run build:mkdocs:only && npm run create:demo",
		"build:mkdocs:only": "mkdocs build",
		"create:demo": "cp -rv ./dist/. ./site/dist/",
		"start": "rm -rf ./dist/ && webpack --mode=development",
		"test:eslint": "eslint -c ./.eslintrc.js ./src/",
		"test:stylelint": "stylelint './src/**/*.css' './docs/theme/assets/stylesheets/**/*.css' --config ./stylelint.config.js"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/plugin-proposal-class-properties": "^7.12.13",
		"@babel/plugin-transform-modules-commonjs": "^7.7.5",
		"@babel/preset-env": "^7.7.7",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"css-loader": "^5.1.3",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"eslint": "^7.22.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.19.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^5.0.0",
		"markdownlint-cli": "^0.27.1",
		"mini-css-extract-plugin": "^1.3.9",
		"postcss": "^8.2.6",
		"postcss-custom-media": "^8.0.0",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^14.0.0",
		"postcss-loader": "^5.2.0",
		"postcss-nested": "^5.0.5",
		"postcss-preset-env": "^6.7.0",
		"postcss-url": "^10.1.1",
		"prettier-eslint": "^12.0.0",
		"prettier-stylelint": "^0.4.2",
		"style-loader": "^2.0.0",
		"stylefmt": "^6.0.3",
		"stylelint": "^13.12.0",
		"stylelint-config-standard": "^21.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"webpack": "^5.27.1",
		"webpack-cli": "^4.5.0",
		"webpack-manifest-plugin": "^3.1.0"
	},
	"engines": {
		"node": ">=8.11.2"
	}
}
